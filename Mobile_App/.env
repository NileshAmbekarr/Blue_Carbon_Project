# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# Storage Configuration
AWS_S3_BUCKET=blue-carbon-mrv-storage
AWS_S3_REGION=ap-south-1

# Maps Configuration
MAPBOX_ACCESS_TOKEN=pk.YOUR_MAPBOX_ACCESS_TOKEN_HERE
MAPBOX_STYLE_URL=mapbox://styles/mapbox/satellite-v9

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
KEYCHAIN_SERVICE_NAME=BlueCarbon_MRV
FILE_ENCRYPTION_KEY=your-file-encryption-key-here

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_IPFS=false
ENABLE_OFFLINE_MAPS=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_PUSH_NOTIFICATIONS=true

# Development Configuration
LOG_LEVEL=debug
ENABLE_DEV_MENU=true
ENABLE_FLIPPER=true

# Sync Configuration
SYNC_INTERVAL_MINUTES=15
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MULTIPLIER=2
MAX_PHOTO_SIZE_MB=10
COMPRESSION_QUALITY=0.8

# Location Configuration
GPS_ACCURACY_THRESHOLD_METERS=5
LOCATION_TIMEOUT_SECONDS=30
HIGH_ACCURACY_MODE=true

# Notification Configuration
FCM_SENDER_ID=your-fcm-sender-id
NOTIFICATION_CHANNELS_ENABLED=true

# Analytics Configuration
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=https://analytics.bluecarbon.example.com

# Version Information
APP_VERSION=1.0.0
BUILD_NUMBER=1
