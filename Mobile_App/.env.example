# Backend Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# Storage Configuration
S3_BUCKET_NAME=blue-carbon-storage
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Maps Configuration
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Security
JWT_SECRET_KEY=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# App Configuration
APP_NAME=Blue Carbon MRV
APP_VERSION=1.0.0
DEBUG_MODE=true

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_FILE_COMPRESSION=true
ENABLE_DEVICE_ATTESTATION=false

# Upload Configuration
MAX_FILE_SIZE_MB=100
MAX_BATCH_UPLOAD_SIZE=5
UPLOAD_RETRY_ATTEMPTS=3
SYNC_INTERVAL_MINUTES=15

# GPS Configuration
GPS_ACCURACY_THRESHOLD_METERS=10
GPS_TIMEOUT_SECONDS=30

# Image Configuration
MIN_IMAGE_RESOLUTION=1024
IMAGE_COMPRESSION_QUALITY=0.8
REQUIRE_EXIF_DATA=true
